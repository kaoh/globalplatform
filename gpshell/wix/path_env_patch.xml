<CPackWiXPatch>
  <CPackWiXFragment Id="INSTALL_ROOT">
    <Component Id="CM_CP_gpshell_path_component" Guid="*">
      <RegistryValue Root="HKLM"
                     Key="Software\GPShell"
                     Name="PathEnv"
                     Type="integer"
                     Value="1"
                     KeyPath="yes" />
      <Environment Id="CM_CP_gpshell_path_env"
                   Name="PATH"
                   Value="[INSTALL_ROOT]bin"
                   Action="set"
                   Part="last"
                   System="yes" />
    </Component>
  </CPackWiXFragment>
  <CPackWiXFragment Id="#PRODUCTFEATURE">
    <ComponentRef Id="CM_CP_gpshell_path_component" />
  </CPackWiXFragment>
</CPackWiXPatch>
